vscode(){
	sudo docker rm -f vscode

	sudo docker run -d \
		-v /etc/localtime:/etc/localtime:ro \
		-v /tmp/.X11-unix:/tmp/.X11-unix  \
    -v ~/git:/home/user/git \
		-e "DISPLAY=unix${DISPLAY}" \
		--device /dev/dri \
		--name vscode \
		markgaze/vscode
}

