docker-remove-images(){
	sudo docker rmi $(sudo docker images -f dangling=true -q)
}

docker-stop-all(){
	sudo docker rm -f $(sudo docker ps -aq)
}

docker-remove-all(){
	sudo docker rm -f $(sudo docker ps -aq)
}

docker-update-all(){
	sudo docker images | grep -v REPOSITORY | awk '{printf $1; printf ":"; print $2}' | xargs -L1 sudo docker pull
}

get-container-ip(){
	sudo docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' "$@"
}

azuredatastudio(){
	sudo docker rm -f azuredatastudio

	sudo docker run -d \
		-v /etc/localtime:/etc/localtime:ro \
		-v /tmp/.X11-unix:/tmp/.X11-unix  \
		-e "DISPLAY=unix${DISPLAY}" \
		--device /dev/dri \
		--name azuredatastudio \
		markgaze/azuredatastudio
}

